@model CategoryListViewModel
<section class="list-group">
    @foreach (var item in Model.Categories)
    {

        var css = "list-group-item";
        @if(item.CategoryId==Model.CurrentCategory){
            css += " active";
        }
        @if(Model.IsClient){
        <a style="cursor:pointer;" href="/product/index?category=@item.CategoryId" class="@css">@item.CategoryName</a>
        }
        else{
            <a style="cursor:pointer;" href="/admin/index?category=@item.CategoryId" class="@css">@item.CategoryName</a>
        }
    }
</section>